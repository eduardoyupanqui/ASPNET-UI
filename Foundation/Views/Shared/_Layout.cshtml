<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="large-7 columns">
            <ul class="left button-group">
                @{ Html.RenderAction("Index", "Consolas", new { @class = "button" }); }
            </ul>
        </div>
        <div class="large-5 columns">
            <a href="/">
                <img src="~/Content/Imagenes/logo.png" alt="Trailers video juegos" />
            </a>
        </div>
    </div>

    @RenderBody()

    <!-- Footer -->

    <footer class="row">
        <div class="large-12 columns">
            <hr />
            <div class="row">
                <div class="large-6 columns">
                    <p>&copy; Copyright no one at all. Go to town.</p>
                </div>
                <div class="large-6 columns">
                    <ul class="inline-list right">
                        @{ Html.RenderAction("Index", "Consolas", new { @class = "" }); }
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @RenderSection("scripts", required: false)

    <script>
        $(document).foundation();
    </script>
</body>
</html>
